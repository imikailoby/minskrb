<section class="schedule">
  <div class="schedule-item">
  <h3>Schedule_</h3>
    <% @schedule.each do |talk| %>
      <div class="schedule-item__event">
        <p><%= l(talk.start_at, format: :short) %></p>
        <p><%= talk.title %></p>
        <p><%= "-#{talk.speaker_name}" unless talk.speaker_name.blank? %></p>
      </div>
    <% end %>
  </div>
</section>
